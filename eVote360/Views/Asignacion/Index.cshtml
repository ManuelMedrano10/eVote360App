@model List<UsuarioViewModel>
@{
    ViewData["Title"] = "Asignación de Dirigentes";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col-12">
            <h2>Asignación de Dirigentes Políticos</h2>
            <p class="text-muted">Vincule a los dirigentes políticos con su partido correspondiente.</p>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            @if (Model == null || Model.Count == 0)
            {
                <div class="alert alert-info text-center">No hay dirigentes políticos registrados y activos en el sistema.</div>
            }
            else
            {
                <table class="table table-striped align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>Dirigente</th>
                            <th>Usuario</th>
                            <th>Partido Actual</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var dirigente in Model)
                        {
                            <tr>
                                <td>@dirigente.Nombre @dirigente.Apellido</td>
                                <td>@dirigente.NombreUsuario</td>
                                <td>
                                    @if (dirigente.PartidoNombre != "Sin Asignar")
                                    {
                                        <img src="@dirigente.PartidoLogo" style="width:25px; height:25px; object-fit:contain;" class="me-2" />
                                        <span class="badge bg-primary">@dirigente.PartidoNombre</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Sin Asignar</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <a asp-action="Asignar" asp-route-id="@dirigente.Id" class="btn btn-sm btn-outline-primary">Vincular / Cambiar Partido</a>

                                    @if (dirigente.PartidoNombre != "Sin Asignar")
                                    {
                                        <a asp-action="Desvincular" asp-route-id="@dirigente.Id" class="btn btn-sm btn-outline-danger ms-2">Desvincular</a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>
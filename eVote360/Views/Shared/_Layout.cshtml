<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - eVote360</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/eVote360.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark border-bottom box-shadow" data-bs-theme="dark">">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">eVote360</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                            </li>

                            @if (User.IsInRole("Administrador"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-light" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown">
                                        Mantenimientos Admin
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item text-light" asp-controller="Usuario" asp-action="Index">Usuarios</a></li>
                                        <li><a class="dropdown-item text-light" asp-controller="PartidoPolitico" asp-action="Index">Partidos Políticos</a></li>
                                        <li><a class="dropdown-item text-light" asp-controller="PuestoElectivo" asp-action="Index">Puestos Electivos</a></li>
                                        <li><a class="dropdown-item text-light" asp-controller="Ciudadano" asp-action="Index">Ciudadanos</a></li>
                                        <li><a class="dropdown-item text-light" asp-controller="Asignacion" asp-action="Index">Asignar Dirigentes Politicos</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item text-light" asp-controller="Eleccion" asp-action="Index">Elecciones</a></li>
                                    </ul>
                                </li>
                            }

                            @if (User.IsInRole("DirigentePolitico"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-light" href="#" id="dirigenteDropdown" role="button" data-bs-toggle="dropdown">
                                        Gestión Política
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item text-light" asp-controller="Candidato" asp-action="Index">Candidatos</a></li>
                                        <li><a class="dropdown-item text-light" asp-controller="AlianzaPolitica" asp-action="Index">Alianzas Políticas</a></li>
                                    </ul>
                                </li>
                            }
                        }
                    </ul>

                    <ul class="navbar-nav">
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            var nombreCompleto = User.Claims.FirstOrDefault(c => c.Type == "NombreCompleto")?.Value;
                            var rol = User.Claims.FirstOrDefault(c => c.Type == System.Security.Claims.ClaimTypes.Role)?.Value;

                            <li class="nav-item">
                                <span class="nav-link text-primary fw-bold">@nombreCompleto (@rol)</span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-danger" asp-controller="Usuario" asp-action="Logout">Cerrar Sesión</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-outline-primary" asp-controller="Usuario" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right"></i> Acceder
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - eVote360
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

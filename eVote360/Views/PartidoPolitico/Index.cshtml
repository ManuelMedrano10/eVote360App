@model List<PartidoPoliticoViewModel>

@{
    ViewData["Title"] = "Mantenimiento de Partidos Políticos";
}

<div class="container mt-4">
    @if (TempData["ElectionError"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> @TempData["ElectionError"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    <div class="row mb-3">
        <div class="col-md-8">
            <h2>Partidos Políticos</h2>
        </div>
        <div class="col-md-4 text-end">
            <a asp-controller="PartidoPolitico" asp-action="Save" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Agregar Nuevo Partido
            </a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            @if (Model == null || Model.Count == 0)
            {
                <div class="alert alert-info text-center">
                    No hay partidos políticos registrados en este momento.
                </div>
            }
            else
            {
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>Logo</th>
                            <th>Nombre del Partido</th>
                            <th>Siglas</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var partido in Model)
                        {
                            <tr>
                                <td>
                                    <img src="@partido.Logo" alt="Logo de @partido.Siglas" style="width: 50px; height: 50px; object-fit: contain;" />
                                </td>
                                <td>@partido.Nombre</td>
                                <td><span class="badge bg-secondary">@partido.Siglas</span></td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@partido.Id" class="btn btn-sm btn-outline-warning @(!partido.IsActive ? "disabled" : "")">Editar</a>

                                    @if (partido.IsActive)
                                    {
                                        <a asp-action="ChangeStatus" asp-route-id="@partido.Id" class="btn btn-sm btn-outline-danger">Desactivar</a>
                                    }
                                    else
                                    {
                                        <a asp-action="ChangeStatus" asp-route-id="@partido.Id" class="btn btn-sm btn-outline-success">Activar</a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>
@model List<PartidoPoliticoViewModel>

@{
    ViewData["Title"] = "Mantenimiento de Partidos Políticos";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col-md-8">
            <h2>Partidos Políticos</h2>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Save" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Agregar Nuevo Partido
            </a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            @if (Model == null || Model.Count == 0)
            {
                <div class="alert alert-info text-center">
                    No hay partidos políticos registrados en este momento.
                </div>
            }
            else
            {
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>Logo</th>
                            <th>Nombre del Partido</th>
                            <th>Siglas</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var partido in Model)
                        {
                            <tr>
                                <td>
                                    <img src="@partido.Logo" alt="Logo de @partido.Siglas" style="width: 50px; height: 50px; object-fit: contain;" />
                                </td>
                                <td>@partido.Nombre</td>
                                <td><span class="badge bg-secondary">@partido.Siglas</span></td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@partido.Id" class="btn btn-sm btn-outline-warning">Editar</a>

                                    <a asp-action="Delete" asp-route-id="@partido.Id" class="btn btn-sm btn-outline-danger" onclick="return confirm('¿Estás seguro de que deseas eliminar este partido?');">Eliminar</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>
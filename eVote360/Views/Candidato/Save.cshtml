@model SaveCandidatoViewModel
@{
    ViewData["Title"] = Model.Id == 0 ? "Registrar Candidato" : "Editar Candidato";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4>@(Model.Id == 0 ? "Registrar Nuevo Candidato" : "Editar Datos del Candidato")</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Save" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="Foto" /> <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Nombre" class="form-label">Nombre <span class="text-danger">*</span></label>
                                <input asp-for="Nombre" class="form-control" placeholder="Nombre del candidato" />
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Apellido" class="form-label">Apellido <span class="text-danger">*</span></label>
                                <input asp-for="Apellido" class="form-control" placeholder="Apellido del candidato" />
                                <span asp-validation-for="Apellido" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PuestoElectivoId" class="form-label">Puesto al que Aspira <span class="text-danger">*</span></label>
                            <select asp-for="PuestoElectivoId" class="form-select">
                                <option value="">-- Seleccione un Puesto Electivo --</option>
                                @if (Model.Puestos != null)
                                {
                                    @foreach (var puesto in Model.Puestos)
                                    {
                                        <option value="@puesto.Id">@puesto.Nombre</option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="PuestoElectivoId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="File" class="form-label">Fotografía del Candidato @(Model.Id == 0 ? "(Obligatorio)" : "(Opcional si no desea cambiarla)")</label>
                            <input asp-for="File" class="form-control" type="file" accept="image/*" />
                            @if (Model.Id != 0 && !string.IsNullOrEmpty(Model.Foto))
                            {
                                <div class="mt-2 text-muted small">
                                    Foto actual: <img src="@Model.Foto" style="width: 40px; height: 40px; object-fit: cover; border-radius: 5px;" class="ms-2" />
                                </div>
                            }
                            <span asp-validation-for="File" class="text-danger"></span>
                            @Html.ValidationMessage("File", new { @class = "text-danger" })
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">Cancelar y Volver</a>
                            <button type="submit" class="btn btn-success">Guardar Candidato</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
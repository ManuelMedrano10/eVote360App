@model VerifyCiudadanoViewModel
@{
    ViewData["Title"] = "Portal de Votación";
    bool hayEleccion = ViewBag.HayEleccion ?? false;
}

<div class="row justify-content-center mt-5">
    <div class="col-md-8 text-center mb-4">
        <h1 class="display-3 text-info-emphasis fw-bold">Sistema de Votación Electrónica</h1>
        <p class="fs-4">Ejerza su derecho al voto de forma rápida y segura.</p>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-md-5">
        <div class="card shadow-lg border-1 rounded-lg">
            <div class="card-body p-5">

                @if (!hayEleccion)
                {
                    <div class="text-center py-4">
                        <h4 class="mt-3">No hay procesos activos</h4>
                        <p class="fs-5">En este momento no se está llevando a cabo ninguna elección. Por favor, vuelva durante la fecha pautada.</p>
                    </div>
                }
                else
                {
                    <div class="text-center mb-4">
                        <i class="bi bi-person-badge text-primary" style="font-size: 3rem;"></i>
                        <h4 class="mt-2">Verificación de Identidad</h4>
                        <p class="text-muted small">Ingrese su documento para acceder a la cabina de votación.</p>
                    </div>

                    @if (!ViewData.ModelState.IsValid && ViewData.ModelState[string.Empty] != null)
                    {
                        <div class="alert alert-danger text-center">
                            @Html.ValidationSummary(true, "")
                        </div>
                    }

                    <form asp-action="Index" method="post">
                        <div class="form-floating mb-4">
                            <input asp-for="DocumentoIdentidad" class="form-control" placeholder="12345678901" autocomplete="off" />
                            <label asp-for="DocumentoIdentidad">Número de Documento (Cédula)</label>
                            <span asp-validation-for="DocumentoIdentidad" class="text-danger small mt-1 d-block"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">Validar y Entrar <i class="bi bi-arrow-right-circle ms-2"></i></button>
                        </div>
                    </form>
                }

            </div>
            <div class="card-footer text-center py-3 bg-light border-0">
                <small class="text-muted">Su voto es secreto y está protegido por encriptación.</small>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
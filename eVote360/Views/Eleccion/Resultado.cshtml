@model ResultadoEleccionViewModel
@{
    ViewData["Title"] = "Resultados Electorales";
}

<div class="container mt-4 mb-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="text-primary fw-bold">Resultados: @Model.NombreEleccion</h2>
            <p class="text-muted">Desglose de votos válidos emitidos y su distribución estadística.</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Volver al Listado
        </a>
    </div>

    @foreach (var puesto in Model.Puestos)
    {
        <div class="card shadow-sm mb-4 border-0">
            <div class="card-header bg-dark text-white py-3">
                <h4 class="mb-0"><i class="bi bi-bar-chart-line-fill me-2"></i> Puesto: @puesto.Puesto</h4>
            </div>
            <div class="card-body p-0">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 5%">Posición</th>
                            <th style="width: 10%">Candidato</th>
                            <th style="width: 25%">Nombre</th>
                            <th style="width: 20%">Partido</th>
                            <th style="width: 15%" class="text-center">Votos Recibidos</th>
                            <th style="width: 25%">Porcentaje (%)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < puesto.Candidatos.Count; i++)
                        {
                            var cand = puesto.Candidatos[i];
                            <tr>
                                <td class="text-center fw-bold fs-5 text-muted">
                                    @(i + 1)
                                    @if (i == 0 && cand.VotosObtenidos > 0)
                                    {
                                        <i class="bi bi-trophy-fill text-warning" title="Posible Ganador"></i>
                                    }
                                </td>
                                <td>
                                    <img src="@cand.LogoPartido" alt="Logo" style="width: 40px; height: 40px; object-fit: contain; border-radius: 5px;" />
                                </td>
                                <td class="fw-bold">@cand.NombreCompleto</td>
                                <td><span class="badge bg-secondary">@cand.Partido</span></td>
                                <td class="text-center fs-5 text-primary fw-bold">@cand.VotosObtenidos.ToString("N0")</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="progress flex-grow-1 me-2" style="height: 12px;">
                                            <div class="progress-bar @(i == 0 ? "bg-success" : "bg-primary")" role="progressbar" style="width: @cand.Porcentaje.ToString(System.Globalization.CultureInfo.InvariantCulture)%" aria-valuenow="@cand.Porcentaje" aria-valuemin="0" aria-valuemax="100"></div>
                                        </div>
                                        <span class="fw-bold small" style="min-width: 45px;">@cand.Porcentaje%</span>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="card-footer bg-light text-end py-2">
                <span class="fw-bold text-muted">Total de Votos Válidos: @puesto.Candidatos.Sum(c => c.VotosObtenidos).ToString("N0")</span>
            </div>
        </div>
    }
</div>